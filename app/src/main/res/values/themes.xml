<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PostApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_gray_light</item>
        <item name="colorPrimaryVariant">@color/color_gray_90</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_text_search</item>
        <item name="colorSecondaryVariant">@color/color_green_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/color_text_search</item>
        <item name="android:editTextColor">@color/color_text_search</item>
        <item name="android:textColorHint">@color/color_text_search</item>
        <item name="android:textSize">17sp</item>
    </style>


    <style name="TextViewTitleStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/alatsi_regular</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">-5sp</item>
    </style>

    <style name="TextViewTitlePostStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/alef_bold</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">-1sp</item>
    </style>

    <style name="TextViewBodyPostStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/abel_regular</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="TextViewNickCommentStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/abel_regular</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

</resources>